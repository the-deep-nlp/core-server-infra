[
    {
      "name": "${container_name}-${environment}",
      "image": "${app_image}",
      "cpu": ${fargate_cpu},
      "memory": ${fargate_memory},
      "networkMode": "awsvpc",
      "logConfiguration": {
          "logDriver": "awslogs",
          "options": {
            "awslogs-group": "/ecs/summarization-task-${environment}",
            "awslogs-region": "${aws_region}",
            "awslogs-stream-prefix": "ecs"
          }
      },
      "portMappings": [
        {
          "containerPort": ${app_port},
          "hostPort": ${app_port}
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "efs_volume",
          "containerPath": "/",
          "readOnly": false
        }
      ]
    }
]